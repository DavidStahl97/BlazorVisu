@page "/"
@using Radzen
@using Radzen.Blazor

<PageTitle>Home</PageTitle>

<RadzenStack Gap="2rem" Class="rz-p-4">
    <RadzenCard>
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.H3" TagName="TagName.H1">Welcome to BlazorVisu!</RadzenText>
            <RadzenText TextStyle="TextStyle.Body1">
                This is a Blazor Server application using Radzen UI components for visualization.
            </RadzenText>
        </RadzenStack>
    </RadzenCard>

    <RadzenCard>
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.H5">Getting Started</RadzenText>
            <RadzenText TextStyle="TextStyle.Body1">
                Explore the different pages using the navigation menu:
            </RadzenText>
            <RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" Wrap="FlexWrap.Wrap">
                <RadzenButton Text="Counter" Icon="add_circle_outline" ButtonStyle="ButtonStyle.Primary" 
                              Click="@(() => NavigationManager.NavigateTo("/counter"))" />
                <RadzenButton Text="Weather" Icon="cloud" ButtonStyle="ButtonStyle.Secondary" 
                              Click="@(() => NavigationManager.NavigateTo("/weather"))" />
            </RadzenStack>
        </RadzenStack>
    </RadzenCard>
</RadzenStack>

@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; } = default!;
}