@page "/counter"
@using Radzen
@using Radzen.Blazor

<PageTitle>Counter</PageTitle>

<RadzenStack Gap="2rem" Class="rz-p-4">
    <RadzenCard>
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.H3" TagName="TagName.H1">Counter</RadzenText>
            <RadzenText TextStyle="TextStyle.Body1">
                Current count: <RadzenBadge BadgeStyle="BadgeStyle.Primary" Text="@currentCount.ToString()" />
            </RadzenText>
        </RadzenStack>
    </RadzenCard>

    <RadzenCard>
        <RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" AlignItems="AlignItems.Center">
            <RadzenButton Text="Click me" Icon="add" ButtonStyle="ButtonStyle.Primary" 
                          Click="IncrementCount" />
            <RadzenButton Text="Reset" Icon="refresh" ButtonStyle="ButtonStyle.Secondary" 
                          Click="ResetCount" />
        </RadzenStack>
    </RadzenCard>

    <RadzenCard>
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.H6">Progress Visualization</RadzenText>
            <RadzenProgressBar Value="@(currentCount % 100)" Max="100" />
            <RadzenText TextStyle="TextStyle.Caption">
                Progress: @(currentCount % 100)%
            </RadzenText>
        </RadzenStack>
    </RadzenCard>
</RadzenStack>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }
}